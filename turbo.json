{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "generate-types": {
      "inputs": [
        "scripts/generate-types.js",
        "../../src-tauri/src/**/*.rs",
        "../../src-tauri/typeshare.toml"
      ],
      "outputs": ["src/generated/typeshare-types.ts"],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": ["generate-types"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["out/**", ".next/**"],
      "outputLogs": "new-only"
    },
    "dev": {
      "dependsOn": ["generate-types"],
      "persistent": true
    },
    "lint": {
      "dependsOn": ["generate-types"],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["generate-types"],
      "outputs": []
    }
  }
}
